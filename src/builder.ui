<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <!-- interface-name builder.ui -->
  <requires lib="gtk" version="4.12"/>
  <object class="GtkWindow" id="window">
    <property name="title">Power Manager</property>
    <child>
      <object class="GtkGrid" id="grid">
        <property name="column-homogeneous">True</property>
        <property name="column-spacing">5</property>
        <property name="row-spacing">5</property>
        <child>
          <object class="GtkLabel" id="power_mode_configuration">
            <property name="justify">center</property>
            <property name="label">Power Mode Configuration</property>
            <property name="use-underline">True</property>
            <property name="visible">1</property>
            <property name="xalign">0.5</property>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="current_mode_label">
            <property name="label">Current Power Mode:</property>
            <property name="visible">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="current_mode">
            <property name="label"></property>
            <property name="visible">1</property>
            <layout>
              <property name="column">1</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_intelligent_cooling">
            <property name="hexpand">True</property>
            <property name="label">Intelligent Cooling</property>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_extreme_performance">
            <property name="label">Extreme Performance</property>
            <layout>
              <property name="column">1</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_battery_saving">
            <property name="label">Battery Saving</property>
            <layout>
              <property name="column">2</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="battery_configuration">
            <property name="justify">center</property>
            <property name="label">Battery Configuration</property>
            <property name="use-underline">True</property>
            <property name="visible">1</property>
            <property name="xalign">0.5</property>
            <layout>
              <property name="column">1</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="battery_label">
            <property name="justify">center</property>
            <property name="label">Battery Mode</property>
            <property name="use-underline">False</property>
            <property name="visible">1</property>
            <property name="xalign">0.5</property>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkToggleButton" id="toggle_battery_conservation">
            <property name="label">Battery Conservation</property>
            <layout>
              <property name="column">1</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkToggleButton" id="toggle_rapid_charge">
            <property name="label">Rapid Charge</property>
            <layout>
              <property name="column">2</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
